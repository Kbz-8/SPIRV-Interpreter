[nzsl_version("1.1")]
module;

struct FragIn
{
	[location(0)] time: u32,
	[location(1)] dim: vec2[f32],
	[location(2)] pos: vec2[f32],
}

struct FragOut
{
	[location(0)] color: vec4[f32]
}

[entry(frag)]
fn main(input: FragIn) -> FragOut
{
	let output: FragOut;
	output.color = vec4[f32](
		input.pos.x / input.dim.x,
		input.pos.y / input.dim.y,
		1.0,
		1.0
	);
	return output;
}
